    .d-flex
        .col-4
            .form-fieldset
                span.form-legend Col 4
                .form-group
                    label First name
                    input.form-control(type='text' name='firstname' placeholder='First name')
                .form-group
                    label Date
                    input.form-control(type='date' name='date')
        .col-8
            .form-fieldset
                span.form-legend Col 8
                .form-group
                    label First name
                    input.form-control(type='text' name='firstname' placeholder='First name')
                .form-group
                    label Date
                    input.form-control(type='date' name='date')

    // input group example
    .form-group
        label Input group example
        .input-group
            input.form-control(type='text' name='city' placeholder='City')
