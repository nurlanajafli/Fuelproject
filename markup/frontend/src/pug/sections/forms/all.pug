    h2.text-dark#all-mask Inputs with Mask
    hr
    .form-group
        label Date
        input.form-control(type='text' placeholder='__/__/____' data-mask="00/00/0000")
    .form-group
        label Time
        input.form-control(type='text' placeholder='--:--' data-mask="00:00")
    .form-group
        label Date and time
        input.form-control(type='text' placeholder='__/__/____ --:--' data-mask="00/00/0000 00:00")
    .form-group
        label Zip code
        input.form-control(type='text' placeholder='_____-___' data-mask="00000-000")
    .form-group
        label US Phone
        input.form-control(type='text' placeholder='(000) 000-0000' data-mask="(000) 000-0000")
    .form-group
        label UZ Phone
        input.form-control(type='text' placeholder='+998(__) ___-__-__' value='+998' data-mask="+998(00) 000-00-00")
    .form-group
        label Money
        input.form-control(type='text' placeholder='0.00' data-mask="#,###.00" data-mask-reverse='true')