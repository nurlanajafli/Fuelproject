    hr.mb-5

    // Form grid
    h4.text-dark#all-grid Form grid

    // form grid example
    .form-group.has-error
        label Form grid example
        .form-row
            .col-6.has-error
                input.form-control(type='text' name='city' placeholder='City')
                .help-block This point cannot be empty.
            .col.has-error
                select.form-control
                    option(selected) Choose...
                    option(value='#') New York
                    option(value='#') LA
                    option(value='#') Texas
                    .help-block This point cannot be empty.
            .col.has-error
                input.form-control(type='text' name='zip' placeholder='Zip')
                .help-block This point cannot be empty.
