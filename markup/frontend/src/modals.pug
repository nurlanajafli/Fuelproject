block title
    title Modals

block page
    .container-fluid
        h1.h3.mb-4.text-gray-800 Modals
        .card.shadow.mb-4
            .card-header.py-3
                .edit-form-toolbar
                    button.btn.btn-link(data-tooltip='tooltip' data-toggle='modal' data-target='#no-paddings-modal' data-placement='top' title='Without paddings')
                        i.fas.fa-battery-empty
                    button.btn.btn-link(data-tooltip='tooltip' data-toggle='modal' data-target='#default-modal' data-placement='top' title='Default Modal')
                        i.fas.fa-battery-quarter
                    button.btn.btn-link(data-tooltip='tooltip' data-toggle='modal' data-target='#medium-modal' data-placement='top' title='Medium modal')
                        i.fas.fa-battery-half
                    button.btn.btn-link(data-tooltip='tooltip' data-toggle='modal' data-target='#large-modal' data-placement='top' title='Large Modal')
                        i.fas.fa-battery-full
                    button.btn.btn-link(data-tooltip='tooltip' data-toggle='modal' data-target='#map-modal' data-placement='top' title='Map Modal')
                        i.fas.fa-map
                    button.btn.btn-link(data-tooltip='tooltip' data-toggle='modal' data-target='#load-notes-modal' data-placement='top' title='Load Notes Modal')
                        i.fas.fa-sticky-note
                    button.btn.btn-link(data-tooltip='tooltip' data-toggle='modal' data-target='.mer-modal' data-placement='top' title='Mobile Express Registration Modal')
                        i.fas.fa-mobile-alt
                    button.btn.btn-link(data-tooltip='tooltip' data-toggle='modal' data-target='.modify-location-modal' data-placement='top' title='Modify Location Modal')
                        i.fas.fa-location-arrow
                    button.btn.btn-link(data-tooltip='tooltip' data-toggle='modal' data-target='.clear-load-modal' data-placement='top' title='Clear Load')
                        i.fas.fa-eraser
                    button.btn.btn-link(data-tooltip='tooltip' data-toggle='modal' data-target='.send-modal' data-placement='top' title='Send')
                        i.fas.fa-paper-plane
                    button.btn.btn-link(data-tooltip='tooltip' data-toggle='modal' data-target='#random-id-for-launch-by-button-0' data-placement='top' title='Search')
                        i.fas.fa-table
                    button.btn.btn-link(data-tooltip='tooltip' data-toggle='modal' data-target='.modal-slider' data-placement='top' title='Modal Slider')
                        i.fab.fa-hive
                    button.btn.btn-link(data-tooltip='tooltip' data-toggle='modal' data-target='#random-id-for-launch-by-button-1' data-placement='top' title='Payroll Settlement')
                        i.fas.fa-print
                    button.btn.btn-link(data-tooltip='tooltip' data-toggle='modal' data-target='#random-id-for-launch-by-button-2' data-placement='top' title='Rate Calc')
                        i.fas.fa-calculator
                    button.btn.btn-link(data-tooltip='tooltip' data-toggle='modal' data-target='#random-id-for-launch-by-button-3' data-placement='top' title='Adjust Balance')
                        i.fas.fa-balance-scale
                    button.btn.btn-link(style="margin-left: auto" data-toggle='modal' data-target='#work-order-error') Error modal
            .card-body
                ol
                    li  <code>style='padding: 0;'</code> attribute for .modal-body/header/footer
                    li  <code>.modal-dialog</code> default size ( small )
                    li  <code>.modal-dialog.modal-lg</code> for medium size
                    li  <code>.modal-dialog.modal-xl</code> for big size
                    li  <code>.modal-dialog.modal-map</code> for map (max-width: 800px)
                    li  Load Notes
                    li  Mobile Express Registration ( MER )
                    li  Location modify
                    li  Clear Load
                    li  Send
                    li  Modal DT example
                    li  Modal Slider
                    li  Print Settlements
                    li  Rate By
                    li  Adjust Balance
                    li  Work order error

